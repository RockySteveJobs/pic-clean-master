<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/aboutIcon"
        android:layout_width="@dimen/about_image_size"
        android:layout_height="@dimen/about_image_size"
        android:layout_gravity="center"
        android:src="@drawable/app_icon"/>

    <TextView
        android:id="@+id/aboutName"
        android:textSize="@dimen/about_textSizeLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:gravity="center"
        android:textColor="@color/about_libraries_title_openSource"
        tools:text="About AppName"/>

    <TextView
        android:id="@+id/aboutVersion"
        android:textSize="@dimen/about_textSizeSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="center"
        android:textColor="@color/about_libraries_title_openSource"
        tools:text="About version"/>

    <View
        android:id="@+id/aboutDivider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="4dp"
        android:background="@color/about_libraries_dividerDark_openSource"
        />

    <TextView
        android:id="@+id/aboutDescription"
        android:textSize="@dimen/about_textSizeSmall"
        android:textStyle="normal"
        android:padding="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="@color/about_libraries_text_openSource"
        tools:text="About description"/>
</LinearLayout>
