<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scanHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:padding="5dp">

    <TextView
        android:id="@+id/scanCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="0"
        android:textSize="100sp"/>

    <TextView
        android:id="@+id/scanCountUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_alignTop="@id/scanCount"
        android:layout_toRightOf="@id/scanCount"
        android:text="KB"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/scanResultHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/scanCount"
        android:layout_alignBottom="@id/scanCount"
        android:layout_toRightOf="@id/scanCount"
        android:gravity="bottom"
        android:text="@string/need_handle"
        android:textSize="24sp"
        android:visibility="invisible"/>

</RelativeLayout>
