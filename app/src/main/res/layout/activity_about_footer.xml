<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">

    <View
        android:id="@+id/aboutDivider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="4dp"
        android:background="@color/about_libraries_dividerDark_openSource" />

    <TextView
        android:textSize="@dimen/about_textSizeSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="center"
        android:textColor="@color/about_libraries_title_openSource"
        android:text="@string/copyright_desc"
        tools:text="@string/copyright_desc"/>

    <TextView
        android:textSize="@dimen/about_textSizeSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="center"
        android:textColor="@color/about_libraries_title_openSource"
        android:text="@string/copyright_second_line"
        tools:text="@string/copyright_second_line"/>

</LinearLayout>
