<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/primary"
              android:orientation="vertical">

    <TextView
        android:id="@+id/slide_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="start|center_vertical"
        android:textColor="@color/white_light_FAFAFA"
        android:paddingLeft="@dimen/navigation_icon_padding"
        android:text="@string/app_name"
        android:textSize="@dimen/abc_text_size_title_material_toolbar" />

    <TextView
        android:id="@+id/total_delete_file_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="25dp"
        android:textColor="@color/white_light_FAFAFA"
        android:textSize="50sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="25dp"
        android:text="@string/slide_menu_hint_total_handle"
        android:textColor="@color/white_light_FAFAFA"
        android:textSize="14sp"/>
</LinearLayout>