<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scanProgressHint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary" >
    
    <View
        android:id="@+id/scanProgressHintDividor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#30BBBBBB" />
    
    <TextView
        android:id="@+id/scanHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scanProgressHintDividor"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:text="" >
    </TextView>

    <ProgressBar
        android:id="@+id/scanProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scanProgressHintDividor"
        android:layout_alignTop="@id/scanHint"
        android:layout_alignBottom="@id/scanHint"
        android:progressDrawable="@drawable/progressbar_color"
        android:clickable="false"
        android:max="100" />
    
</RelativeLayout>
